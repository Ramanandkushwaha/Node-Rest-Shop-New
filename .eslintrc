{
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "indent": ["error", 2],
        "no-trailing-spaces": 1,
        "key-spacing": [1, {"beforeColon": false, "afterColon": true}],
        "comma-spacing": [1, {"before": false, "after": true}],
        "brace-style": ["error", "1tbs", {"allowSingleLine": true}],
        "no-multi-spaces": "error",
        "space-infix-ops": "error",
        "no-tabs": "error"
    },
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "es6": true
    }
  }